	"scripts": {
		"docs:build": "yarn workspace fractures-dev build",
		"docs:dev": "yarn workspace fractures-dev dev",
		"docs:export": "yarn workspace fractures-dev build && yarn workspace fractures-dev export -o dist",
		"fractures:build": "yarn workspace @fractures/css build",
		"fractures:test": "NODE_ENV=test yarn workspace @fractures/css test",
		"package:fractures:publish": "yarn workspace @fractures/css package:publish",
		"package:library:publish": "yarn workspace @fractures/library package:publish",
		"package:easings:publish": "yarn workspace @fractures/easings package:publish",
		"test:coverage": "vitest run --coverage",
		"test": "vitest run --reporter dot"
	},
	"workspaces": [
		"apps/*",
		"fractures/*"
	],
	"devDependencies": {
		"@types/node": "^20.6.3",
		"@types/react": "^18.2.22",
		"eslint": "^8.50.0",
		"eslint-config-next": "^13.5.2",
		"prettier": "^3.0.3",
		"typescript": "^5.2.2"
	}
}
